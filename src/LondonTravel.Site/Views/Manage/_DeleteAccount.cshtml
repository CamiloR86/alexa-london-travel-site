<noscript>
    <hr />
    <form asp-route="@SiteRoutes.DeleteAccount" method="post" class="form-horizontal">
        <div>
            <input type="submit" class="btn btn-danger" value="@SR.DeleteAccountButtonText" title="@SR.DeleteAccountButtonAltText" />
        </div>
    </form>
</noscript>
<div class="d-none js-hidden-control">
    <hr />
    <button class="btn btn-lg btn-danger" title="@SR.DeleteAccountButtonAltText" data-ga-label="Delete Account" data-toggle="modal" data-target="#delete-account-modal">
        @SR.DeleteAccountButtonText
    </button>
</div>
<div id="delete-account-modal" class="modal js-modal" tabindex="-1" role="dialog" aria-describedby="delete-account-modal-description" aria-labelledby="delete-account-modal-title">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title h4" id="delete-account-modal-title">@SR.DeleteAccountModalTitle</h3>
                <button type="button" class="close js-delete-content" data-dismiss="modal" aria-label="@SR.CloseButtonText" data-ga-label="Delete Account Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="js-delete-content">
                    <p class="lead">
                        <h3 id="delete-account-modal-description"class="h4">
                            <i class="fas fa-exclamation-triangle text-warning" aria-hidden="true"></i>
                            @SR.DeleteAccountWarning
                        </h3>
                    </p>
                    <p>
                        @SR.DeleteAccountParagraph1Html
                    </p>
                    <p>
                        @SR.DeleteAccountParagraph2
                    </p>
                    <p>
                        @SR.DeleteAccountParagraph3Html
                    </p>
                </div>
                <div class="js-delete-loader d-none">
                    <p class="lead text-center">
                        @SR.DeleteInProgressText
                    </p>
                    <p>
                        <div class="center-block loader" aria-hidden="true"></div>
                    </p>
                </div>
            </div>
            <div class="modal-footer">
                <form asp-route="@SiteRoutes.DeleteAccount" method="post" class="form-horizontal js-modal-form">
                    <button type="button" class="btn btn-lg btn-primary js-delete-control" title="@SR.CancelButtonAltText" data-dismiss="modal" data-ga-label="Delete Account Cancel">@SR.CancelButtonText</button>
                    <input type="submit" class="btn btn-lg btn-danger js-delete-control js-modal-confirm" value="@SR.DeleteAccountConfirmationButtonText" title="@SR.DeleteAccountConfirmationButtonAltText" data-ga-label="Delete Account Confirm" disabled />
                </form>
            </div>
        </div>
    </div>
</div>
