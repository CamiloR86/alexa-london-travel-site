@inject Microsoft.AspNetCore.Identity.SignInManager<LondonTravelUser> SignInManager
@{
    string displayName = User.GetDisplayName();
    string avatarUrl = User.GetAvatarUrl(Url.CdnContent("avatar.png", Options));
}
@if (SignInManager.IsSignedIn(User))
{
    <form asp-route="@SiteRoutes.SignOut" method="post" class="navbar-nav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" asp-route="@SiteRoutes.Manage" title="@SR.ManageLinkAltText" data-ga-label="Manage Account Navbar">
                    @displayName
                    <lazyimg alt="@displayName" title="@displayName" src="@avatarUrl" aria-hidden="true" />
                    <noscript>
                        <img alt="@displayName" title="@displayName" src="@avatarUrl" aria-hidden="true" />
                    </noscript>
                </a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link nav-link" title="@SR.SignOutLinkText" data-ga-label="Sign-Out Navbar">
                    @SR.SignOutLinkText
                    <i class="fas fa-sign-out-alt" aria-hidden="true"></i>
                </button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-route="@SiteRoutes.SignIn" rel="nofollow" title="@SR.SignInLinkAltText" data-ga-label="Sign-In Navbar">@SR.SignInLinkText</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-route="@SiteRoutes.Register" title="@SR.RegisterLinkAltText" data-ga-label="Register Navbar">@SR.RegisterLinkText</a>
        </li>
    </ul>
}
