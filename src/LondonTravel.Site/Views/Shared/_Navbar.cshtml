<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a asp-route="@SiteRoutes.Home" class="navbar-brand" title="@SR.HomepageLinkAltText" data-ga-label="Homepage Navbar">
        <span>
            @SR.BrandName
            <lazyimg src="@Url.CdnContent("avatar.png", Options)" alt="@SR.BrandName" title="@SR.BrandName" aria-hidden="true" />
            <noscript>
                <img src="@Url.CdnContent("avatar.png", Options)" alt="@SR.BrandName" title="@SR.BrandName" aria-hidden="true" />
            </noscript>
        </span>
    </a>
    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="site-navbar" aria-expanded="false" aria-label="@SR.NavbarCollapseAltText" data-ga-label="Navbar Collapse">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-ga-label="Navbar Menu">
                    @SR.NavbarMenuText
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="@Options?.ExternalLinks?.Skill" rel="noopener noreferrer" target="_blank" title="@SR.InstallLinkAltText" data-ga-label="Install Navbar">
                        @SR.InstallLinkText
                        <i class="fas fa-external-link-alt" aria-hidden="true"></i>
                    </a>
                    @if (Options?.Authentication?.IsEnabled == true)
                    {
                        <div class="dropdown-divider"></div>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="dropdown-item" asp-route="@SiteRoutes.Manage" title="@SR.ManageLinkAltText" data-ga-label="Manage Account Navbar">
                                @SR.ManageLinkText <i class="fas fa-user" aria-hidden="true"></i>
                            </a>
                        }
                        else
                        {
                            <a class="dropdown-item" asp-route="@SiteRoutes.Register" title="@SR.RegisterLinkAltText" data-ga-label="Register Navbar">
                                @SR.RegisterLinkText <i class="fas fa-user-plus" aria-hidden="true"></i>
                            </a>
                        }
                    }
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" asp-route="@SiteRoutes.Help" title="@SR.HelpLinkAltText" data-ga-label="Help Navbar">
                        @SR.HelpLinkText <i class="fas fa-question-circle" aria-hidden="true"></i>
                    </a>
                    <a class="dropdown-item" asp-route="@SiteRoutes.PrivacyPolicy" title="@SR.PrivacyPolicyLinkAltText" data-ga-label="Privacy Policy Navbar">
                        @SR.PrivacyPolicyLinkText
                    </a>
                    <a class="dropdown-item" asp-route="@SiteRoutes.TermsOfService" title="@SR.TermsOfServiceLinkAltText" data-ga-label="Terms of Service Navbar">
                        @SR.TermsOfServiceLinkText
                    </a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" asp-route="@SiteRoutes.Technology" title="@SR.TechnologyLinkAltText" data-ga-label="Technology Navbar">
                        @SR.TechnologyLinkText
                    </a>
                </div>
            </li>
        </ul>
        @if (Options?.Authentication?.IsEnabled == true)
        {
            @await Html.PartialAsync("_SignInPartial")
        }
    </div>
</nav>
