@model Microsoft.AspNetCore.Http.Authentication.AuthenticationDescription
<button type="submit" class="btn btn-block btn-social @Html.GetSocialLoginButtonCss(Model.AuthenticationScheme)" name="provider" value="@Model.AuthenticationScheme" title="@SR.SignInButtonAltText(Model.DisplayName)" data-ga-label="Sign-In - @Model.DisplayName" data-toggle="modal" data-target=".sign-in-modal">
    @await Html.PartialAsync("_SocialIcon", Model.AuthenticationScheme)
    @SR.SignInButtonText(Model.DisplayName)
</button>
