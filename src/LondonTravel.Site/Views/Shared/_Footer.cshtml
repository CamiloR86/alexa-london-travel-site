@model SiteOptions
<hr />
<footer>
    <p class="d-none d-md-block">
        @SR.CopyrightText |
        <a asp-route="@SiteRoutes.Help" title="@SR.HelpLinkAltText" data-ga-label="Help Footer">
            @SR.HelpLinkText
        </a>
        |
        <a asp-route="@SiteRoutes.PrivacyPolicy" title="@SR.PrivacyPolicyLinkAltText" data-ga-label="Privacy Policy Footer">
            @SR.PrivacyPolicyLinkText
        </a>
        |
        <a asp-route="@SiteRoutes.TermsOfService" title="@SR.TermsOfServiceLinkAltText" data-ga-label="Terms of Service Footer">
            @SR.TermsOfServiceLinkText
        </a>
        |
        <a asp-route="@SiteRoutes.Technology" title="@SR.TechnologyLinkAltText" data-ga-label="Technology Footer">
            @SR.TechnologyLinkText
        </a>
        |
        <a href="@Model.ExternalLinks.Status.AbsoluteUri" rel="noopener noreferrer" target="_blank" title="@SR.StatusLinkAltText" data-ga-label="Site Uptime">
            @SR.StatusLinkText
        </a>
        <span id="build-date" data-format="YYYY-MM-DD HH:mm Z" data-timestamp="@GitMetadata.Timestamp.ToString("u", CultureInfo.InvariantCulture)"></span>
    </p>
    <div class="d-md-none">
        <div class="row">
            <div class="col">
                @SR.CopyrightText
            </div>
        </div>
        <div class="row">
            <div class="col">
                <a asp-route="@SiteRoutes.Help" title="@SR.HelpLinkAltText" data-ga-label="Help Footer">
                    @SR.HelpLinkText
                </a>
                |
                <a asp-route="@SiteRoutes.PrivacyPolicy" title="@SR.PrivacyPolicyLinkAltText" data-ga-label="Privacy Policy Footer">
                    @SR.PrivacyPolicyLinkText
                </a>
                |
                <a asp-route="@SiteRoutes.TermsOfService" title="@SR.TermsOfServiceLinkAltText" data-ga-label="Terms of Service Footer">
                    @SR.TermsOfServiceLinkText
                </a>
            </div>
        </div>
    </div>
</footer>
