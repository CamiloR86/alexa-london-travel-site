@if (!User.Identity.IsAuthenticated &&
     string.Equals(Context.Request.Query["Message"], nameof(SiteMessage.AccountDeleted), StringComparison.OrdinalIgnoreCase))
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close" data-ga-label="Dismiss Account Deleted">
            <span aria-hidden="true">&times;</span>
        </button>
        <p class="lead">
            Your London Travel account has been deleted.
        </p>
        <p>
            Sorry to see you go.
        </p>
    </div>
}
