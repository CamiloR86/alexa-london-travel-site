@model RegisterViewModel
@{
    ViewBag.MetaDescription = SR.RegisterMetaDescription;
    ViewBag.Title = SR.RegisterTitle;
}
@await Html.PartialAsync("_SignInErrors")
<div class="row">
    <div class="col-md-12">
        <section>
            <h1 class="h2">@SR.RegisterSubtitle</h1>
            <p class="lead">
                @SR.RegisterLead
            </p>
            <blockquote>
                <p class="mb-0">
                    <em>@SR.CommuteSkillInvocation</em>
                </p>
            </blockquote>
            <p>
                @SR.RegisterParagraph1
            </p>
            <p>
                @SR.RegisterParagraph2
            </p>
            <p>
                @SR.RegisterParagraph3
                <ul>
                    <li>
                        <a asp-route="@SiteRoutes.PrivacyPolicy" rel="noopener" title="@SR.PrivacyPolicyLinkAltText" data-ga-label="Privacy Policy (Register)">
                            @SR.PrivacyPolicyLinkText
                        </a>
                    </li>
                    <li>
                        <a asp-route="@SiteRoutes.TermsOfService" rel="noopener" title="@SR.TermsOfServiceLinkAltText" data-ga-label="Terms of Service (Register)">
                            @SR.TermsOfServiceLinkText
                        </a>
                    </li>
                </ul>
            </p>
            @if (Model.RegisteredUsers > 0)
            {
                <p>
                    @SR.RegisterParagraph4(Model.RegisteredUsers)
                </p>
            }
        </section>
    </div>
</div>
<hr />
<h2 class="h4">
    @SR.RegisterSignInSubtitle
</h2>
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-4">
        <section>
            @await Html.PartialAsync("_SignInForm")
        </section>
    </div>
</div>
@await Html.PartialAsync("_SignInModal")
@section stylesBody {
    @await Html.PartialAsync("_SocialButtonsStyles")
}
