@{
    ViewBag.MetaDescription = SR.SignInMetaDescription;
    ViewBag.MetaRobots = "NOINDEX";
    ViewBag.Title = SR.SignInTitle;
}
@await Html.PartialAsync("_SignInErrors")
<h2>@SR.SignInTitle</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <h4>@SR.SignInSubtitle</h4>
            <hr />
            @await Html.PartialAsync("_SignInForm")
        </section>
    </div>
    <hr class="hidden-md hidden-lg" />
    <div class="col-md-8">
        <section>
            <h3>@SR.SignInRegisterSubtitle</h3>
            <p>
                @SR.SignInRegisterText
            </p>
            <p>
                <a class="btn btn-primary btn-lg" asp-route="@SiteRoutes.Register" title="@SR.RegisterLinkAltText">
                    @SR.RegisterLinkText
                    <i class="fa fa-user-plus" aria-hidden="true" data-ga-label="Register (Button)"></i>
                </a>
            </p>
        </section>
    </div>
</div>
@await Html.PartialAsync("_SignInModal")
@section stylesBody {
    @await Html.PartialAsync("_SocialButtonsScripts")
}
